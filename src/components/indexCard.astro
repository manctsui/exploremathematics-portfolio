<style is:global>
    /* Article */
    .a {
    padding: 1em 2vw 2em 10vw;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(15rem, 1fr));
    gap: 1vw;
    }

    .a ol, .a ul {
    /* font-size: 1.2em; */
    margin-top: .3em;
    line-height: 1.5;
    max-width: 20rem;
    padding-left: 0;
    }
    ul {
        list-style-type: none;
        /* padding-left: 1em; */
    }

    /* Descriptions below links */
    .a ol > li > p {
    margin-top: 0;
    font-size: 1rem;
    }

    .a figure {
    max-width: 100%;
    margin: 0;
    max-width: 15em;
    }
    h3 {
        margin-bottom: 0;
    }
</style>